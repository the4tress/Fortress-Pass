{
  "manifest_version": 2,
  "name": "Fortress Pass",
  "description": "A unique password on every site without any database backup. One password to rule them all.",
  "version": "0.1",
  "options_page": "html/options.html",
  "author": "Ryan Fortress",

  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },

  "browser_action": {
    "default_icon": "img/icon-48.png",
    "default_popup": "html/popup.html"
  },

  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/jquery.js",
        "js/underscore.js",
        "js/content.js"
      ],
      "css": [
        "css/style.css"
      ]
    }
  ],

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "<all_urls>"
  ]
}
